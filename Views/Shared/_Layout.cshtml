<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pramerica_Assignment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Pramerica_Assignment.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand d-flex flex-column align-content-center justify-content-center " href="#">
                    <img src="/Images/Pramerica_page.jpg" alt="" width="100" height="50" class="d-inline-block ml-5 align-text-top">
                    <b >PRAMERICA</b>
                </a>
                <a class="btn btn-primary me-5" type="submit" asp-controller="StudentDetails" asp-action="AddStudent">Add Student</a>
                @if (_signIn.IsSignedIn(User))
                {

                    <a role="button" class="btn btn-outline-info btn-block px-3 mr-3">
                        @User.Identity.Name
                    </a>
                    <a type="button" class="btn btn-outline-primary shadow mr-3" asp-controller="Account" asp-action="Logout">
                        Logout </a>}
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
